<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="UserControl.Views.Pages.SecondPage"
    x:DataType="pageVM:SecondPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageVM="clr-namespace:UserControl.ViewModels.Page"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <pageVM:SecondPageViewModel />
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox
            Height="50"
            Text="{Binding Path=Text}"
            TextAlignment="Center"
            Watermark="Second Page"
            Width="280" />
    </StackPanel>
</UserControl>